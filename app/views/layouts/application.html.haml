!!!
%html
  %head
    %title 墓.yamashi.ro
    = stylesheet_link_tag "application", media: "all"
    %meta{name: "viewport", content: "width=device-width", "initial-scale" => 1}
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          .navbar-brand
            %span.glyphicon.glyphicon-tower
            墓.yamashi.ro
        .collapse.navbar-collapse
          .navbar-brand.navbar-right
            - if current_user
              = link_to signout_path, method: :delete, data: { toggle: "tooltip", placement: "left" },  title: "Sign Out" do
                = image_tag current_user.image, size: "22x22", style: "max-width:100px; margin-top: -7px;", class: "img-rounded"
                %span.glyphicon.glyphicon-log-out><
            - else
              = link_to "auth/github", data: { toggle: "tooltip", placement: "left" },  title: "Sign in with GitHub"  do
                = fa_icon "github"
    .container
      = yield
